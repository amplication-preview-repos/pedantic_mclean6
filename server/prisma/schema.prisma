datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  isAdmin   Boolean?
  lastName  String?
  orders    Order[]
  password  String
  reviews   Review[]
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Product {
  category        Category? @relation(fields: [categoryId], references: [id])
  categoryId      String?
  colors          String?
  createdAt       DateTime  @default(now())
  description     String
  discountedPrice Float?
  id              String    @id @default(cuid())
  images          String
  order           Order?    @relation(fields: [orderId], references: [id])
  orderId         String?
  reviews         Review[]
  title           String
  titleprice      Float
  updatedAt       DateTime  @updatedAt
  variants        String?
}

model Category {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  products  Product[]
  updatedAt DateTime  @updatedAt
}

model Review {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  product   Product? @relation(fields: [productId], references: [id])
  productId String?
  rating    String
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Order {
  createdAt     DateTime  @default(now())
  id            String    @id @default(cuid())
  paymentIntent String?
  paymentStatus Boolean?
  price         Float?
  products      Product[]
  status        Json?
  updatedAt     DateTime  @updatedAt
  user          User?     @relation(fields: [userId], references: [id])
  userId        String?
}
